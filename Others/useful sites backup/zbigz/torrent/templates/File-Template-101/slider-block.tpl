<div class="slaider-block-all">
	
	<div class="slaider-block-news">
		<div class="sl-info">
			<h2>[full-link]{title}[/full-link]</h2>
			<div class="slaider-text">{short-story limit="140"} <div style="clear: both;"></div></div>
			<div class="slaider-views"><img src="{THEME}/images/sl-download.png" alt="sl1-download" class="views-img" />{views}</div>
			<div class="slaider-comment"><img src="{THEME}/images/sl-comment.png" alt="sl1-comment" class="views-img" />{comments-num}</div>
			[full-link]<span class="sl-more">More</span>[/full-link]
		</div>
		<img src="{image-1}" alt="{title}" />
	</div>
	
	<div class="slaider-block-news-mini">
		<div class="slaider-block-news-image-mini">
			<img src="{image-1}" alt="{title}" />
		</div>
	</div>
	
</div>