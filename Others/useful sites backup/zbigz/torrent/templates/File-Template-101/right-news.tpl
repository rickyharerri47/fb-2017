	<div class="news-date">{date=d-m-Y}</div>
	<div style="clear: both; height: 10px;"></div>
	<div class="news-news-image">
		[full-link]<img src="{image-1}" alt="{title}" />[/full-link]
	</div>
	
	<div class="news-news-content">
