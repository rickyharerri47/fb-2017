<div class="slaider1-news">
	<div class="slaider1-news-image">
		[full-link]<img src="{image-1}" alt="{title}" />[/full-link]
	</div>
	<div class="slaider1-news-right-block">
		<h2>[full-link]{title}[/full-link]</h2>		
		<div class="slaider1-news-content">Description:
			{short-story limit="200"}<div style="clear: both;"></div>
		</div>
		<div class="slaider1-views"><img src="{THEME}/images/sl1-download.png" alt="sl1-download" />{views}</div>
		<div class="slaider1-comment"><img src="{THEME}/images/sl1-comment.png" alt="sl1-comment" />{comments-num}</div>
	</div>
	<div style="clear: both;"></div>
</div>