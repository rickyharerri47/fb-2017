<div class="main-news">
	<h2>[full-link]{title}[/full-link]</h2>
	<div class="main-news-image">
		[full-link][/full-link]
	</div>
	<div class="main-news-content">
		{short-story}
        <div style="clear: both;"></div>
	</div>
	<div class="main-info-full-news">
		<span><img src="{THEME}/images/author.png" alt="author"></span>{author}  
		<span><img src="{THEME}/images/time.png" alt="time"></span>{date=d-m-Y} - {date=H:i}  
		<span><img src="{THEME}/images/views.png" alt="views"></span>{views} 
		<span><img src="{THEME}/images/comment.png" alt="comment"></span>{comments-num}
		<span class="main-news-more2">
			&gt;&gt;[full-link]Read more[/full-link]
		</span>
	</div>
</div>